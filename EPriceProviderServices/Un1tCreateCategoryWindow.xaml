<Window x:Class="EPriceProviderServices.Un1tCreateCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Topmost="True" ResizeMode="NoResize" ShowInTaskbar="True"
        Title="Создать Категорию UN1T" Height="140" Width="400" WindowStartupLocation="CenterOwner">
    <Grid Height="Auto" Width="390" Margin="1" HorizontalAlignment="Center" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock x:Name="txtStatus" Margin="3" Width="380" VerticalAlignment="Top" HorizontalAlignment="Center" Height="Auto"></TextBlock>
        <TextBox Grid.Row="1" x:Name="txtName" Margin="3" Width="380" HorizontalAlignment="Center" Height="Auto"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Height="Auto" HorizontalAlignment="Center">
            <Button x:Name="btnOk" Margin="5,5,5,5" VerticalAlignment="Top" HorizontalAlignment="Center" Height="Auto" Click="btnOk_Click">Создать</Button>
            <Button x:Name="btnCancel" Margin="5,5,5,5" VerticalAlignment="Top" HorizontalAlignment="Center" Height="Auto" Click="btnCancel_Click">Отмена</Button>
        </StackPanel>
    </Grid>
</Window>
